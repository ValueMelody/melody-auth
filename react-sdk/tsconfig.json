{
  "compilerOptions": {
    "target": "es5",
    "lib": ["DOM", "ES2015"],
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "jsx": "react",
    "rootDir": "src",
    "outDir": "./dist",
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
