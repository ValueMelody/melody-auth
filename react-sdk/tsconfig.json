{
  "compilerOptions": {
    "target": "es5",
    "lib": ["DOM", "ES2015"],
    "declaration": true,
    "strict": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "rootDir": "src",
    "outDir": "./dist",
    "paths": {
      "shared": ["./shared"] 
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
