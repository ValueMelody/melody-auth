{
  "compilerOptions": {
    "lib": ["DOM", "ES2017"],
    "target": "ES2017",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}
