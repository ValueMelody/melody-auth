{
  "name": "server",
  "scripts": {
    "deploy": "wrangler deploy --minify src/index.tsx",
    "db:import": "wrangler d1 execute melody-oauth --remote --file=./scripts/db.sql",
    "type:check": "tsc --noEmit",
    "migration:create": "wrangler d1 migrations create melody-oauth",
    "migration:apply": "wrangler d1 migrations apply melody-oauth --remote",
    "dev": "wrangler dev src/index.tsx",
    "dev:migration:apply": "wrangler d1 migrations apply melody-oauth --local",
    "dev:db:import": "wrangler d1 execute melody-oauth --local --file=./scripts/db.sql"
  },
  "dependencies": {
    "@cfworker/uuid": "^1.12.4",
    "@node-oauth/oauth2-server": "^5.1.0",
    "class-validator": "^0.14.1",
    "hono": "^4.4.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240529.0",
    "wrangler": "^3.57.2"
  }
}
