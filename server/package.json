{
  "name": "server",
  "scripts": {
    "deploy": "wrangler deploy --minify src/index.tsx",
    "type:check": "tsc --noEmit",
    "db:import": "wrangler d1 execute melody-auth --remote --file=./scripts/db.sql",
    "migration:apply": "wrangler d1 migrations apply melody-auth --remote",
    "dev": "wrangler dev src/index.tsx",
    "dev:db:import": "wrangler d1 execute melody-auth --local --file=./scripts/db.sql",
    "dev:migration:apply": "wrangler d1 migrations apply melody-auth --local",
    "swagger:generate": "node ./src/scripts/generate-swagger.js"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.4.0",
    "class-validator": "^0.14.1",
    "hono": "^4.4.12",
    "hono-sessions": "^0.5.8",
    "shared": "*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240529.0",
    "swagger-jsdoc": "^6.2.8",
    "wrangler": "^3.57.2"
  }
}
