{
  "name": "server",
  "type": "module",
  "scripts": {
    "build": "vite build --mode client && vite build",
    "prod:deploy": "npm run build && wrangler deploy --minify src/index.tsx",
    "prod:migration:apply": "wrangler d1 migrations apply melody-auth --remote",
    "prod:secret:generate": "node ./src/scripts/generate-secret.cjs prod",
    "prod:secret:clean": "node ./src/scripts/clean-secret.cjs prod",
    "dev:start": "vite --port 8787",
    "dev:migration:apply": "wrangler d1 migrations apply melody-auth --local",
    "dev:secret:generate": "node ./src/scripts/generate-secret.cjs",
    "dev:secret:clean": "node ./src/scripts/clean-secret.cjs",
    "node:dev": "vite --port 8787 --config vite-node.config.ts",
    "node:build": "rimraf dist && npm run build && tsc && tsc-alias && node ./src/scripts/node-build-patch.cjs",
    "node:start": "node dist/node.js",
    "node:migration:apply": "knex --knexfile knexfile.cjs migrate:latest",
    "node:secret:generate": "node ./src/scripts/generate-secret.cjs node",
    "node:secret:clean": "node ./src/scripts/clean-secret.cjs node",
    "test:check:node": "TEST_MODE=node vitest run ./src/__tests__/normal",
    "test:check:node-key-rotate": "TEST_MODE=node vitest run ./src/__tests__/key-rotate",
    "test:check:cf": "vitest run ./src/__tests__/normal",
    "test:check:cf-key-rotate": "vitest run ./src/__tests__/key-rotate",
    "test:check:templates": "vitest run ./src/templates",
    "test:check:pages": "vitest run ./src/pages",
    "test:coverage": "vitest run --coverage ./src --exclude ./src/__tests__/key-rotate",
    "type:check": "tsc --noEmit",
    "swagger:generate:s2s": "node ./src/scripts/generate-swagger.cjs",
    "swagger:generate:embedded": "node ./src/scripts/generate-embeded-swagger.cjs"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.2",
    "@hono/swagger-ui": "^0.4.0",
    "@melody-auth/shared": "^1.0.8",
    "@simplewebauthn/browser": "^13.1.0",
    "@simplewebauthn/server": "^13.1.1",
    "base32-decode": "^1.0.0",
    "base32-encode": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "hono": "^4.7.5",
    "hono-sessions": "^0.5.8",
    "ioredis": "^5.4.1",
    "knex": "^3.1.0",
    "nodemailer": "^6.9.15",
    "pg": "^8.12.0",
    "qrcode": "^1.5.4",
    "qs": "^6.14.0",
    "samlify": "^2.10.0",
    "tailwindcss": "^4.0.8",
    "toml": "^3.0.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240529.0",
    "@hono/vite-build": "^1.3.0",
    "@hono/vite-dev-server": "^0.19.0",
    "@tailwindcss/vite": "^4.0.8",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.11",
    "@types/jsdom": "^21.1.7",
    "@types/jwk-to-pem": "^2.0.3",
    "@types/node-jose": "^1.1.13",
    "@types/nodemailer": "^6.4.15",
    "@types/qrcode": "^1.5.5",
    "@types/qs": "^6.9.18",
    "@types/react": "^19.1.2",
    "@vitest/coverage-v8": "^3.1.1",
    "better-sqlite3": "^11.2.1",
    "ioredis-mock": "^8.9.0",
    "jsdom": "^26.0.0",
    "node-jose": "^2.2.0",
    "otplib": "^12.0.1",
    "pg-mem": "^3.0.2",
    "rimraf": "^6.0.1",
    "swagger-jsdoc": "^6.2.8",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vite": "^6.1.1",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^3.1.1",
    "wrangler": "^4.13.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.40.0"
  }
}
