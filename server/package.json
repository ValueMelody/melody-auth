{
  "name": "server",
  "scripts": {
    "type:check": "tsc --noEmit",
    "swagger:generate": "node ./src/scripts/generate-swagger.js",
    "prod:deploy": "wrangler deploy --minify src/index.tsx",
    "prod:migration:apply": "wrangler d1 migrations apply melody-auth --remote",
    "prod:secret:generate": "node ./src/scripts/generate-secret.js prod",
    "dev:start": "wrangler dev src/index.tsx",
    "dev:migration:apply": "wrangler d1 migrations apply melody-auth --local",
    "dev:secret:generate": "node ./src/scripts/generate-secret.js",
    "test:check": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.4.0",
    "base32-decode": "^1.0.0",
    "base32-encode": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.14.1",
    "hono": "^4.4.12",
    "hono-sessions": "^0.5.8",
    "shared": "*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240529.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.11",
    "@vitest/coverage-v8": "^2.0.5",
    "better-sqlite3": "^11.2.1",
    "node-jose": "^2.2.0",
    "swagger-jsdoc": "^6.2.8",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5",
    "wrangler": "^3.57.2"
  }
}
